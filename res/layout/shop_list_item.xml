<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout 
        android:layout_width="180px"
        android:layout_height="120px" 
        android:background="@drawable/default_pic_bg"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:layout_margin="5dp">
        
        <ImageView
            android:id="@id/shop_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_pic" />
        
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:text="TextView" 
            android:textSize="16sp"
            android:textColor="#696969"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:id="@id/shop_flavor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="口味:4 " 
                android:textSize="12sp"
            	android:textColor="#696969"/>

            <TextView
                android:id="@id/shop_environment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/shop_flavor"
                android:text="环境:3 " 
                android:textSize="12sp"
            	android:textColor="#696969"/>

            <TextView
                android:id="@id/shop_server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/shop_environment"
                android:text="服务:4 " 
                android:textSize="12sp"
            	android:textColor="#696969"/>

        </RelativeLayout>
        
    </LinearLayout>

</LinearLayout>